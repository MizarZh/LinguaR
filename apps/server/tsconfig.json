{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmitOnError": true,
    "removeComments": true
  },
  "include": ["src/**/*"]
}
